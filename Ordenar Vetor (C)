//6. Ordene um array em ordem crescente em uma linguagem de programação.

#include <stdio.h>
int main() 
{

  int n=100, i, j, M, N, T;
  
  int V[n];
//Tamanho do vetor
  printf("Quantos números terá o vetor?: \n");
  scanf("%d", &n);
  N=n;
//Componentes
   printf("Informe os componentes do vetor: \n");
  for (i=0;i<n; i++)
    {
      scanf("%d", &V[i]);
    }
  printf("\n\nVetor desordenado:\n");
for (i=0;i<n; i++)
  {
    printf(" %d", V[i]);
  }
  //Função de ordenação
    for (i=0;i<N-1;i++) //Varrendo o array até que esteja completamente ordenado
    {
        M = i;
        for (j= i+1;j<N;j++) //Achando o menor número atual
        {
            if (V[j] < V[M]) 
            {
                M = j;
            }
        }//Realizando as trocas necessárias
        T = V[i];
        V[i] = V[M];
        V[M] = T;
    }
printf("\n\n");
  //Print do array ordenado
    printf("Vetor em ordem crescente: \n");
    for (i = 0; i < N; i++) {
        printf("%d ", V[i]);
    }

    return 0;
}
